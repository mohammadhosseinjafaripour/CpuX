<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Email"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_to"
            android:hint="ایمیل خود را وارد کنید"
            android:text="studioapk.ir@gmail.com"
            android:visibility="gone" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_sub"
            android:hint="ایمیل خود را وارد کنید"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:ems="10"
            android:id="@+id/et_text"
            android:hint="متن خود را وارد کنید      "
            android:inputType="textPostalAddress"
            android:singleLine="false"
            android:layout_weight="0.18" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit"
            android:layout_marginTop="5dp"
            android:text="ارسال پیام"
            android:background="#024e61"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="برای تماس کافی است نام زیر را لمس کنید"
            android:id="@+id/textView"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="محمد حسین جعفری پور"
            android:id="@+id/jfp"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="18dp" />

        <Button
            android:text="ارتباط از طریق تلگرام"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telegram"
            android:background="#FF024E61"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/tg" />

    </LinearLayout>

</ScrollView>
